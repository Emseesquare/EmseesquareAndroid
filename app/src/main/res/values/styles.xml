<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Notice.User.Username" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/notice_member_name_font_size</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Notice.User.Position" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/notice_member_position_font_size</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black66</item>
    </style>

    <style name="Notice.Content.Description" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/notice_member_description_font_size</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="Notice.Content.PinCount" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/notice_member_description_font_size</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/green_500</item>
    </style>

    <style name="Auth.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/green_500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">999dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/phone_number_button_text</item>
    </style>
    <!--    Widget.MaterialComponents.TextInputLayout.OutlinedBox-->
    <style name="Auth.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/phone_number_edit_text_hint</item>
        <item name="boxStrokeColor">@color/green_500</item>
        <item name="hintTextColor">@color/green_500</item>
        <item name="prefixText">+91-</item>
    </style>

    <style name="Theme.Emseesquare.Auth" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#F1F1F1</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="titleTextColor">@color/titleColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Emseesquare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Emseesquare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>